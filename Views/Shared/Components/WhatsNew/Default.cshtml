@model IEnumerable<WebApplicationFront_End.Models.NewsType>

<div class="d-flex flex-column flex-md-row justify-content-md-between border-bottom mb-4">

    <h1 class="mb-4">What’s New</h1>
    @{
        var i = 1;
    }
    <ul class="nav nav-pills d-inline-flex text-center">
    @foreach (var item in Model)
    {
        
            <li class="nav-item mb-3">
                @if (i == 1)
                {
                    <a class="d-flex py-2 bg-light rounded-pill active me-2" data-bs-toggle="pill" href="#tab-@i">
                        <span class="text-dark" style="width: 100px;">@item.Name</span>
                    </a>
                }
                else
                {
                    <a class="d-flex py-2 bg-light rounded-pill me-2" data-bs-toggle="pill" href="#tab-@i">
                        <span class="text-dark" style="width: 100px;">@item.Name</span>
                    </a>
                }
            </li>
        
        i++;
    }
    </ul>

</div>
<div class="tab-content mb-4">
    @for (int z = 1; z <= Model.Count(); z++)
    {
        if(z==1)
        {
            <div id="tab-@z" class="tab-pane fade show p-0 active">
                @await Component.InvokeAsync("News2", new { type = Model.ToList()[z-1].Id })
            </div>
        }
        else
        {
            <div id="tab-@z" class="tab-pane fade show p-0">
                @await Component.InvokeAsync("News2", new { type = Model.ToList()[z-1].Id })
            </div>
        }
    }
  
</div>
